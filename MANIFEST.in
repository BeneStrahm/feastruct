# Top-level metadata/config
include README.md
include LICENSE
include pyproject.toml
include setup.cfg

# Type hints (if present)
include feastruct/py.typed
recursive-include feastruct *.pyi

# Package data (common non-code assets)
recursive-include feastruct *.json *.csv *.txt *.md *.yml *.yaml *.ini *.cfg *.npz *.npy

recursive-include feastruct *.mplstyle
recursive-include feastruct *.md

# Exclusions
global-exclude *.py[cod] __pycache__ *.so *.dylib .DS_Store Thumbs.db

# Do not ship development folders
prune tests
prune docs
prune examples
